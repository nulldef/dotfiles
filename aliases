alias ll="ls -lh"
alias la="ls -lah"
alias s="cd ~/apps"
alias ..="cd ../"
alias ...="cd ../../"
alias d="cd ~/Downloads"
alias b="bundle exec"
alias v="nvim"
alias bo="EDITOR=subl bundle open"
alias no="EDITOR=subl npm edit"
alias kov="COVER=1 rspec --no-fail-fast"
alias tenv="RAILS_ENV=test MIX_ENV=test"

