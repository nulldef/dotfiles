# vim: set syntax=sh;

function kcli() {
  pod=$1
  shift
  kubectl exec -it $pod -- sh $@
}

function sql() {
  db="db"
  if [[ $1 != "" ]]; then
    db=$1
  fi

  env="development"
  if [[ $2 != "" ]]; then
    env=$2
  fi

  database="${db}_${env}"
  PAGER=less LESS="-ierRMSx4 -FX" psql -Upostgres $database
}

function git_commit() {
  comment=$@
  if [[ $1 == "" ]]; then
    comment="$(fortune -n short)"
  fi

  git add . && git commit -am $comment
}

function nspec() {
  eval rspec $*
  if [[ $? -ne 0 ]]; then
    notify -t "Rspec" -m "Failed" -s Hero
  else
    notify -t "Rspec" -m "Success" -s Submarine
  fi
}

function ggmom() {
  branches=()
  eval "$(git for-each-ref --shell --format='branches+=(%(refname:lstrip=2))' refs/heads/)"

  git checkout master -q
  git pull

  for b in ${branches[@]}; do
    if [[ "$b" == 'master' ]]
    then
      continue
    fi

    if [[ $(git branch -vv | grep gone | grep $b) ]]
    then
      echo "Remove gone branch $b"
      git branch -D $b
      continue
    fi

    git checkout $b -q
    git merge master --no-edit -q
    echo "Branch $b updated"
  done

  git checkout master
}

