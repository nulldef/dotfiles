# vim: set syntax=bash:

export LANG=en_US.UTF-8
export LC_ALL=en_US.UTF-8
export LC_NUMERIC="en_US.UTF-8"
export EDITOR='nvim'
export PAGER=less
export LESS="-ix2 -X -+e -+E -R -S -F"
export MORE="-eirMX"
export DISABLE_SPRING=true
export PATH="$HOME/bin:$PATH"

# iex history
export ERL_AFLAGS="-kernel shell_history enabled"

# disable brew autoupdate
export HOMEBREW_NO_AUTO_UPDATE=1

# settings for `bat` command (analog of `cat`, but fancy)
export BAT_THEME="Nord"
export BAT_STYLE="plain"

# ruby build options for Apple Silicon
# export RUBY_CONFIGURE_OPTS="--with-zlib-dir=$(brew --prefix zlib) --with-openssl-dir=$(brew --prefix openssl@1.1) --with-readline-dir=$(brew --prefix readline) --with-libyaml-dir=$(brew --prefix libyaml)"

